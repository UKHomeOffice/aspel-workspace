extends:
  - lennym

env:
  es6: true
  node: true
  browser: true

parser: babel-eslint

parserOptions:
  sourceType: module

settings:
  react:
    version: detect

rules:
  no-console: 1
  react/prop-types: 0
  react/display-name: 0
  no-var: 2
  no-irregular-whitespace:
    - 2
    - skipStrings: false
