# Authentication tokens for private repositories
GITHUB_AUTH_TOKEN=ghp_your_github_token_here
ART_AUTH_TOKEN=your_artefactory_token_here

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aspel_db
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/aspel_test_db

# Service URLs
WORKFLOW_URL=http://localhost:8080
SEARCH_URL=http://localhost:9200
ATTACHMENTS_URL=http://localhost:8090

# AWS/S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=aspel-attachments
AWS_REGION=eu-west-2

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@example.com
EMAIL_PASS=your_email_password

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_SEARCH=true
ENABLE_ATTACHMENTS=true

# Development Services (space separated list)
DEV_SERVICES="asl asl-internal-ui asl-internal-api"